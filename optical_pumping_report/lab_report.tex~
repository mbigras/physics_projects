\begin{table}[H]
\caption{Experimental and Accepted g-factors }
\begin{tabular}{c@{\hskip 1cm} c@{\hskip 1cm} c}
\hline\noalign{\smallskip}
Isotope & $g_{\mathrm{f}_{\mathrm{exp}}}$ & $g_{\mathrm{f}}$ \\
\hline\noalign{\smallskip}
$^{85}$Rb & $0.34 \pm 0.02$ & accepted \\
$^{87}$Rb & $0.52 \pm 0.03$ & accpeted\\
\hline\noalign{\smallskip}
\end{tabular}
\label{result}
\end{table}

